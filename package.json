{
  "name": "ai-interviewer",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "backend-server",
    "virtu-voice-interviewer"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:backend": "cd backend-server && npm run dev",
    "dev:frontend": "cd virtu-voice-interviewer && npm run dev",
    "build": "npm-run-all --parallel build:*",
    "build:backend": "cd backend-server && npm run build",
    "build:frontend": "cd virtu-voice-interviewer && npm run build"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
} 